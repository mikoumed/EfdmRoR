<% provide(:title, "Materials") %>
<div style="padding: 8px;width: 200px;float:right;z-index:1;">
    <%= link_to 'New material', new_material_path, class: "btn btn-success btn-md"%>
</div>
<table id='async_datatable' class="table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Team</th>
      <th>Panel</th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.name %></td>
        <td><%= material.team.name %></td>
        <td>
            <%= link_to '', edit_material_path(material), class:'fa fa-1mx fa-pencil-square-o' %> |
            <%= link_to '', material, method: :delete, data: { confirm: 'Are you sure?' }, class:'fa fa-1mx fa-trash-o' %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>
