<% provide(:title, "Materials") %>

<table id='async_datatable' class="table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Team</th>
      <th>Panel</th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.name %></td>
        <td><%= material.team.name %></td>
        <td>
            <%= link_to 'Show', material %> |
            <%= link_to 'Edit', edit_material_path(material) %> |
            <%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New material', new_material_path %>
