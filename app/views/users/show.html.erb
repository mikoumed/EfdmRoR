<%= provide(:title ,'Profile') %>

<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= @user.name %>
            </h1>
        </section>
    </aside>
    <% if false %>
    <div class="col-md-8">
        <% if @user.events.any? %>
            <h3>Events (<%= @user.events.count %>)</h3>
                <ol class="events">
                    <%= render 'shared/feed' %>
                </ol>
            <%= will_paginate @events %>
        <% end %>
    </div>
    <% end %>
</div>
