<% provide(:title, "Edit user") %>

<div class="register-box">
	<div class="register-box-body">
		<p class="register-box-msg">Update your profile</p>

    	<%= form_for(@user) do |f| %>
      		<%= render 'shared/error_messages' %>

	  		<div class="form-group has-feedback">
	  			<%= f.email_field :email, class:"form-control", placeholder:"Email" %>
	  			<%= content_tag(:span, nil ,class: "glyphicon glyphicon-envelope form-control-feedback") %>
	  		</div>
	  		<div class="form-group has-feedback">
	  			<%= f.password_field :password, class:"form-control", placeholder:"Password"%>
	  			<%= content_tag(:span, nil ,class: "glyphicon glyphicon-lock form-control-feedback") %>
	  		</div>
	  		<div class="form-group has-feedback">
	    		<%= f.password_field :password_confirmation, class:"form-control", placeholder:"Retype password"%>
	    		<%= content_tag(:span, nil ,class: "glyphicon glyphicon-lock form-control-feedback") %>
	  		</div>
			<div class="row">
      			<%= f.submit "Save changes", class: "btn btn-primary btn-block btn-flat" %>
			</div>
    	<% end %>
  </div>
</div>
