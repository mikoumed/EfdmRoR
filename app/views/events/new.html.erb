
<% provide(:title, 'Report Event') %>


<div class="col-md-6">
  <div class="box box-primary">

		<%= form_for @event, url: newEvent_path do |f| %>
		<!-- <%= render 'shared/error_messages', object: f.object %> -->
		  <div class="box-body">
			  <div class="bootstrap-timepicker">
					<div class="form-group">
				  		<label>Time picker</label>
						<div class="input-group">
							<%= f.text_field :created_at, class:"form-control timepicker" %>
							<div class="input-group-addon">
					  			<i class="fa fa-clock-o"></i>
							</div>
				  		</div>
					</div>
			  	</div>

			  	<div class="form-group">
					<label>Line</label>
                    <!-- <%= f.collection_select :id, Line.all, :id, :name, {:prompt => ' Select Line'}%> -->
					<%= f.select :object, Line.all.map(&:name) , {include_blank: true}, class:"form-control select2" %>
			  	</div>

				<div class="form-group">
					<label>Note</label>
					  <div class="box-body pad">
						  <%= f.text_area :content, class:"textarea" %>
					  </div>
			  	</div>

			  	<div class="box-footer">
					<button type="submit" class="btn btn-primary">Submit</button>
			  	</div>
			</div>
		<%end%>
	</div>
</div>
