<%= simple_form_for @issue, remote: true do |f| %>
  <div class="form-inputs">
    <%= f.input :title, input_html: { class: 'form-control input-sm'} %>
    <%= f.input :date_range, input_html: { class: "form-control input-sm date_range_picker" } %>
    <%= f.input_field :start, as: :hidden, value: Date.today, class: 'form-control input-sm start_hidden' %>
    <%= f.input_field :end, as: :hidden, value: Date.today, class: 'form-control input-sm end_hidden' %>
    <%= f.input :color, as: :select, collection: [['Black','black'], ['Green','green'], ['Red','red']],input_html: { class: 'form-control input-sm'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary'%>
    <%= link_to 'Delete',
                issue,
                method: :delete,
                style: 'margin-top: 5px;',
                class: 'btn btn-danger',
                data: { confirm: 'Are you sure?' },
                remote: true unless @issue.new_record? %>
  </div>
<% end %>
